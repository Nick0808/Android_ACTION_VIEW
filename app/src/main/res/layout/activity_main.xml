<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/main_button01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sample1"
                android:text="Action_View"
                android:textSize="30sp" />

            <Button
                android:id="@+id/main_button05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sample5"
                android:text="map"
                android:textSize="30sp" />

            <Button
                android:id="@+id/main_button06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sample6"
                android:text="Web"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_button02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:onClick="sample2"
                android:text="Call"
                android:textSize="28sp"
                app:backgroundTint="#3F51B5" />

            <Button
                android:id="@+id/main_button03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:onClick="sample3"
                android:text="contact"
                android:textSize="28sp"
                app:backgroundTint="#3F51B5"/>

            <Button
                android:id="@+id/main_button04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:onClick="sample4"
                android:text="SMS"
                android:textSize="28sp"
                app:backgroundTint="#3F51B5"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>